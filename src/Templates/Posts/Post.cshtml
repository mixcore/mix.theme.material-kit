@{
    ViewBag.Title = Model.Title;
    ViewBag.PageClass = " profile-page ";
}

<partial name="../Modules/MainNavigation.cshtml"/>
<partial name="../Widgets/PostHeroBanner.cshtml"/>

<div class="main main-raised">
    <div class="section text-center">
        <div class="row">
          <div class="col-md-8 ml-auto mr-auto">
            <h1 class="title">@Model.Title</h1>
            <h2 class="description">@Model.Excerpt</h2>
          </div>
        </div>
    </div>
    <div class="section section-basic">
      <div class="container ql-editor">
          @Html.Raw(Model.Content)
      </div>
    </div>
    
    <partial name="../Widgets/BlogInfo.cshtml"/>
</div>


<partial name="../Modules/LatestBlogPosts.cshtml"/>
<partial name="../Modules/Footer.cshtml"/>

@section Schema {
    <script type="application/ld+json">
    {
      "@@context": "https://schema.org",
      "@@type": "NewsArticle",
      "headline": "@Model.Title",
      "image": [
        "@Model.ImageUrl"
       ],
      "datePublished": "@Model.PublishedDateTime",
      "dateModified": "@Model.LastModified"
    }
    </script>
}
